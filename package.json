{
  "name": "xing-jobs-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "db:create": "db-migrate db:create --config ./src/infrastructure/repository/database/config.json --env without-database",
    "db:migration:create": "db-migrate create --config ./src/infrastructure/repository/database/config.json --migrations-dir ./src/infrastructure/repository/database/migrations",
    "db:migration:up": "db-migrate up --config ./src/infrastructure/repository/database/config.json --migrations-dir ./src/infrastructure/repository/database/migrations",
    "db:migration:down": "db-migrate down --config ./src/infrastructure/repository/database/config.json --migrations-dir ./src/infrastructure/repository/database/migrations",
    "db:migration:reset": "db-migrate reset --config ./src/infrastructure/repository/database/config.json --migrations-dir ./src/infrastructure/repository/database/migrations",
    "dev-start": "NODE_ENV=development nodemon --verbose --exec \"babel-node\" src/server.js",
    "dev-import-jobs": "nodemon --verbose --exec \"babel-node\" --max-old-space-size=32000 cron/ImportJobs.js",
    "prebuild": "rimraf dist && mkdir dist && cp -r package.json process.json .babelrc ./dist",
    "build": "babel src -d dist/src --copy-files && babel cron -d dist/cron --copy-files && cd dist && npm --production install",
    "postbuild": "cd dist && zip -rm jobs-service .",
    "deploy": "npm run build && bash scripts/deploy.sh",
    "start": "node src/server.js",
    "import-jobs": "node --max-old-space-size=32000 cron/ImportJobs.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.4",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.4.0",
    "dotenv": "^5.0.1",
    "ejs": "^2.5.7",
    "elasticsearch": "^14.1.0",
    "express": "^4.16.2",
    "firebase-admin": "^5.12.1",
    "follow-redirects": "^1.4.1",
    "morgan": "^1.9.0",
    "mysql2": "^1.5.2",
    "raven": "^2.4.2",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.37.6",
    "uuid": "^3.2.1",
    "winston": "^2.4.2",
    "winston-loggly-bulk": "^2.0.2",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "jest": "^22.1.4",
    "rimraf": "^2.6.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "nodemon": "^1.17.3"
  }
}
